{
  "name": "midnight",
  "version": "0.0.0",
  "description": "Ecommerce website",
  "author": "Vladisvlav Navoyan",
  "engines": {
    "node": "v16.20.0"
  },
  "license": "MIT",
  "scripts": {
    "dev:server": "nodemon --watch server.ts --watch src/server -e ts,tsx --exec 'ts-node server.ts'",
    "dev:client": "yarn build:client && vite --config vite.config.ts dev",
    "build": "yarn clean && tsc -p tsconfig.prod.json && yarn build:client && yarn build:server && yarn copy-files",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --ssr src/client/entry-server.tsx --outDir dist/server",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "serve": "yarn build && cross-env NODE_ENV=production yarn ts-node ./server",
    "serve:local": "vite serve",
    "clean": "rm -rf dist/",
    "copy-files": "copyfiles static/* dist/assets && copyfiles index.html dist && copyfiles -f dist/client/assets/* dist/assets",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "compression": "1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "4.18.2",
    "mysql2": "^3.2.4",
    "node-fetch": "2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.10.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.31.0",
    "sequelize-typescript": "^2.1.5",
    "serve-static": "^1.15.0",
    "the-new-css-reset": "^1.8.4",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/compression": "1.7.2",
    "@types/concurrently": "6.4.0",
    "@types/eslint": "8.37.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.2",
    "@types/node-fetch": "^2.6.3",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@types/validator": "^13.7.15",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "8.0.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^21.1.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "typescript": "5.0.4",
    "vite": "4.3.0",
    "vitest": "^0.30.1"
  }
}
